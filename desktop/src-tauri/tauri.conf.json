{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mini-baheth",
  "version": "0.1.0",
  "identifier": "com.yshalsager.minibaheth",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "features": ["pytauri/standalone"]
  },
  "app": {
    "windows": [
      {
        "title": "mini-baheth",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
